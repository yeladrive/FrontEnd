<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:theme="@style/YelaDrive"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/titleRideTextView"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_below="@+id/titleRideTextView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="8dp"
            android:id="@+id/driverRideTextView"/>

        <ImageView
            android:id="@+id/checkImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/clearImageView"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-50dp"
            android:src="@drawable/ic_check" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/clearImageView"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Line 3"
            android:textSize="15sp"
            android:layout_below="@+id/driverRideTextView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="8dp"
            android:id="@+id/details"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>